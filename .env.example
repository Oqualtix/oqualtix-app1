# Oqualtix AI-Powered Financial Forensics Platform
# Environment Configuration Template

# =============================================================================
# AI & MACHINE LEARNING CONFIGURATION
# =============================================================================

# Oxul AI Engine Configuration (No external APIs required)
# Proprietary AI system with 100% local processing
OXUL_AI_ENGINE=enabled

# AI Model Configuration
AI_MODEL=oxul_proprietary
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# TensorFlow.js Configuration
TENSORFLOW_BACKEND=webgl
TENSORFLOW_DEBUG=false

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# Email Verification Service
SMTP_HOST=smtp.outlook.com
SMTP_PORT=587
SMTP_USER=oqualtix@outlook.com
SMTP_PASS=your_email_password_here
SMTP_SECURE=true

# Email Templates
FROM_EMAIL=oqualtix@outlook.com
FROM_NAME=Oqualtix Forensics

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Connection
DATABASE_URL=your_database_connection_string_here
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=oqualtix_forensics
DATABASE_USER=your_db_user
DATABASE_PASS=your_db_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Token Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
CRYPTO_SECRET=your_crypto_secret_here

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# =============================================================================
# ADMIN SECURITY
# =============================================================================

# Admin Safeguard Password (for user deletion)
ADMIN_DELETE_PASSWORD=00119077

# Super Admin Configuration
SUPER_ADMIN_EMAIL=admin@oqualtix.com
SUPER_ADMIN_PASS=your_super_admin_password_here

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
AI_RATE_LIMIT_MAX=20

# Request Timeouts
API_TIMEOUT=30000
AI_TIMEOUT=45000

# =============================================================================
# FRAUD DETECTION CONFIGURATION
# =============================================================================

# Fraud Detection Thresholds
FRAUD_THRESHOLD_LOW=0.2
FRAUD_THRESHOLD_MEDIUM=0.4
FRAUD_THRESHOLD_HIGH=0.6
FRAUD_THRESHOLD_CRITICAL=0.8

# AI Confidence Levels
AI_CONFIDENCE_MINIMUM=0.6
AI_CONFIDENCE_GOOD=0.8
AI_CONFIDENCE_EXCELLENT=0.9

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# AI Features
ENABLE_NEURAL_NETWORKS=true
ENABLE_CONVERSATIONAL_AI=true
ENABLE_NLP_ANALYSIS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_PROACTIVE_AI=true

# Security Features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TERMS_ENFORCEMENT=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment Type
NODE_ENV=development
EXPO_ENV=development

# Debug Settings
DEBUG_MODE=true
ENABLE_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Development Settings
DEV_BYPASS_EMAIL_VERIFICATION=false
DEV_MOCK_AI_RESPONSES=false
DEV_ENABLE_TEST_ACCOUNTS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Analytics & Monitoring
ANALYTICS_KEY=your_analytics_key_here
MONITORING_KEY=your_monitoring_key_here
ERROR_TRACKING_KEY=your_error_tracking_key_here

# Cloud Storage (for file uploads)
CLOUD_STORAGE_BUCKET=your_storage_bucket_here
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_ACCESS_KEY=your_access_key_here
CLOUD_STORAGE_SECRET_KEY=your_secret_key_here

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Compliance Settings
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
SOX_COMPLIANCE=true

# Data Retention (in days)
DATA_RETENTION_PERIOD=2555
LOG_RETENTION_PERIOD=365
AUDIT_RETENTION_PERIOD=2555

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Caching
CACHE_TTL=300000
REDIS_URL=your_redis_url_here
ENABLE_CACHING=true

# File Processing
MAX_FILE_SIZE=50MB
MAX_FILES_PER_UPLOAD=10
SUPPORTED_FILE_TYPES=csv,xlsx,xls,pdf,txt

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Push Notifications
PUSH_NOTIFICATION_KEY=your_push_notification_key_here
ENABLE_PUSH_NOTIFICATIONS=true

# Slack Integration (for alerts)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#fraud-alerts

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Configuration
TEST_DATABASE_URL=your_test_database_url_here
TEST_OXUL_AI=enabled

# Mock Data Settings
GENERATE_MOCK_DATA=true
MOCK_TRANSACTION_COUNT=1000
MOCK_FRAUD_RATE=0.1

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30
BACKUP_LOCATION=your_backup_location_here

# Disaster Recovery
DR_ENABLED=true
DR_SYNC_INTERVAL=3600